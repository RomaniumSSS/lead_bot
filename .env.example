# ==============================================
# Telegram Bot Configuration
# ==============================================
# Получить токен: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# ==============================================
# Anthropic Claude API
# ==============================================
# Получить ключ: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxx

# ==============================================
# PostgreSQL Database
# ==============================================
# Формат: postgres://user:password@host:port/database
DATABASE_URL=postgres://salesbot:salesbot_password@localhost:5432/sales_assistant

# Настройки для docker-compose (опционально)
DB_USER=salesbot
DB_PASSWORD=salesbot_password
DB_NAME=sales_assistant
DB_PORT=5432

# ==============================================
# Owner (Владелец бизнеса)
# ==============================================
# Ваш Telegram ID (найти можно через @userinfobot)
OWNER_TELEGRAM_ID=123456789

# ==============================================
# Business Info
# ==============================================
BUSINESS_NAME=Моя Веб-студия
BUSINESS_DESCRIPTION=Разработка сайтов и веб-приложений для малого бизнеса

# Ссылки на материалы для тёплых лидов (action="send_materials")
# Заполните своими ссылками или оставьте пустым
PORTFOLIO_URL=https://example.com/portfolio
CASES_URL=https://example.com/cases
PRESENTATION_URL=https://example.com/presentation.pdf

# ==============================================
# Application Mode
# ==============================================
# development | production
MODE=development

# ==============================================
# Bot Mode (Режим работы бота)
# ==============================================
# polling - для разработки (бот опрашивает Telegram)
# webhook - для продакшена (Telegram отправляет обновления на сервер)
BOT_MODE=polling

# ==============================================
# Webhook настройки (только для BOT_MODE=webhook)
# ==============================================
# Полный URL вашего сервера (должен быть HTTPS в продакшене)
# Пример: https://yourdomain.com/webhook
WEBHOOK_URL=https://yourdomain.com/webhook

# Путь для приёма обновлений от Telegram
WEBHOOK_PATH=/webhook

# Порт для webhook сервера
WEBHOOK_PORT=8080

# ==============================================
# Logging (опционально)
# ==============================================
LOG_LEVEL=INFO
